<Window x:Class="TotoGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TotoGui"
        mc:Ignorable="d"
        Title="Toto eredmény ellenőrző" Height="308" Width="800">
    <Canvas>
        <Label Content="Kérem a forduló eredményeit [1, 2, X]:" HorizontalAlignment="Left" Margin="26,22,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="InputBox" Margin="71,85,0,0" TextWrapping="Wrap" Width="120" Canvas.Left="-32" Canvas.Top="-29" TextChanged="InputBox_TextChanged"/>
        <CheckBox x:Name="IncorrectCountBox" IsEnabled="false" Content="" Margin="155,180,0,0" Canvas.Left="-113" Canvas.Top="-99" RenderTransformOrigin="1.707,-2.103"/>
        <CheckBox x:Name="IncorrectCharacterBox" IsEnabled="false" Content="" Margin="284,180,0,0" RenderTransformOrigin="2.567,0.181" Canvas.Left="-242" Canvas.Top="-78"/>
        <Button x:Name="SaveButton" Content="Eredmények mentése" Canvas.Left="39" Canvas.Top="126" Click="SaveButton_Click"/>

    </Canvas>
</Window>
